<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_main"
    tools:context="com.cdgpacific.sellercatpal.MainActivity">

    <RelativeLayout
        android:id="@+id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ScrapCatPal Seller Dashboard"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#54869d"
            android:textSize="15dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/numberF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="$17,000.00"
            android:textAlignment="center"
            android:gravity="center"
            android:background="#7cb85e"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Total VALUE of Your\nAppraised Units:"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:gravity="center"
            />

    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="145dp"
            android:background="#26ffffff"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="315dp">

        <ScrollView
            android:id="@+id/scrollId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="50dp"
            android:fillViewport="true"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="0dp"
                        android:text="TOTAL NUMBER of \nUNITS CHECKED in:"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    <TextView
                        android:id="@+id/numberA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="1000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#faed56"
                        android:gravity="right"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1.0"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@drawable/faded_line"
                    android:layout_marginTop="5dp"
                    />

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="TOTAL NUMBER of \nUNITS APPRAISED:"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    <TextView
                        android:id="@+id/numberB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="1000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#faed56"
                        android:gravity="right"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1.0"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@drawable/faded_line"
                    android:layout_marginTop="5dp"
                    />

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="TOTAL NUMBER of\nUNITS to be\nAPPRAISED:"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    <TextView
                        android:id="@+id/numberC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="1000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#faed56"
                        android:gravity="right"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1.0"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@drawable/faded_line"
                    android:layout_marginTop="5dp"
                    />

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="AVERAGE PRICE of\nAPPRAISED UNITS:"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    <TextView
                        android:id="@+id/numberD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="$1000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#faed56"
                        android:gravity="right"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1.0"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@drawable/faded_line"
                    android:layout_marginTop="5dp"
                    />

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="TOTAL VALUE of\nAPPRAISED UNITS:"
                        android:textColor="#ffffff"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                    <TextView
                        android:id="@+id/numberE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="$1000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#faed56"
                        android:gravity="right"
                        android:layout_gravity="center_vertical|right"
                        android:layout_weight="1.0"
                        android:layout_alignParentRight="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                </TableRow>

            </TableLayout>

        </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        style="?android:textAppearanceSmall"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:text="Logout"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="#ea4e30"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btnBoxInformation"
        style="?android:textAppearanceSmall"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:text="Box Info"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="#595959"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btnViewYard"
        style="?android:textAppearanceSmall"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:text="YARD DETAIL"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="#d1c72b"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btnLogout2"
        style="?android:textAppearanceSmall"
        android:layout_width="135dp"
        android:layout_height="130dp"
        android:text="Logout"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="#ea4e30"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btnBoxInformation2"
        style="?android:textAppearanceSmall"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Box Info"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="#595959"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        />

    <Button
        android:id="@+id/btnViewYard2"
        style="?android:textAppearanceSmall"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="YARD DETAIL"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="#d1c72b"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
