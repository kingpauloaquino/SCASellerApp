<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_dialog_error"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#cccccc"
    tools:context="com.cdgpacific.sellercatpal.customDialogErrorActivity">

     <!--//580dp -->
    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG OUT OF YOUR ACCOUNT"
        android:padding="20dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:background="#b62727"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:layout_width="98dp"
            android:layout_height="84dp"
            android:src="@drawable/exclamation_icon"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ERROR"
            android:textColor="#b62727"
            android:textSize="26dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="140dp"
            />

        <TextView
            android:id="@+id/title_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirming you want to log out?"
            android:textColor="#292929"
            android:textSize="18dp"
            android:fontFamily="sans-serif-thin"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="140dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:stretchColumns="*"
            >

            <TableRow android:layout_width="0dp">
                <Button
                    android:id="@+id/btn_dialog_OK"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="OK"
                    android:padding="0dp"
                    android:textSize="22sp"
                    android:background="#b62727"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/screen_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MW-199"
            android:textSize="15sp"
            android:textColor="#292929"
            android:gravity="right"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

</RelativeLayout>
